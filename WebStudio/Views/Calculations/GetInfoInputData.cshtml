@model WebStudio.ViewModels.GetInfoInputDataViewModel

@{
    ViewBag.Title = "Вводные данные";
    Layout = "_Layout";
}
<div class="container">
    <div class="row justify-content-between">
        <div class="col-lg-12 pl-0 pr-0">
            <table class="table">
                <thead class="bg-secondary text-white">
                <tr>
                    <th scope="col">Валюта</th>
                    <th scope="col">Условия поставки</th>
                    <th scope="col">Способ оплаты:</th>
                    <th scope="col">Ед.изм</th>
                    <th scope="col">НДС</th>
                </tr>
                </thead>
                <tbody>
                
                <tr>
                    <td>
                        <form class="mb-2" asp-controller="Calculations" asp-action="AddInputData" asp-route-collectionNum="1" method="post">
                            <input name="key" class="sizeInput" maxlength="15" type="text" placeholder="Название">
                            <input name="sum" class="sizeInput" max="1000000" type="number" step="0.1" placeholder="Курс">
                            <input class="sizeInput" type="submit" value="добавить">
                        </form>
                        
                        @foreach (var currancy in Model.Currencies)
                        {
                            <div class="row justify-content-between border-bottom mb-1 ml-1 mr-2">
                                <div>
                                    @currancy.Name @currancy.Сourse
                                </div>
                                <div class="row pl-0 pr-0">
                                    <form asp-controller="Calculations" asp-action="DeleteInputData" asp-route-collectionNum="1" asp-route-currencyId="@currancy.Id" method="post">
                                        <button type="submit" class="butt">
                                            <i class="far far fa-trash-alt mr-2 mt-0 text-success iconFont" aria-hidden="true"></i>
                                        </button>
                                    </form>
                                </div>
                                
                            </div>
                        }

                    </td>
                    <td>
                        <form class="mb-2" asp-controller="Calculations" asp-action="AddInputData" asp-route-collectionNum="2">
                            <input name="value" class="sizeInput" maxlength="15" type="text" placeholder="Название">
                            <input class="sizeInput" type="submit" value="добавить">
                        </form>
                        
                        @foreach (var val in Model.ListInputData.DelivTerm)
                        {
                            <div class="row justify-content-between border-bottom mb-1 ml-1 mr-2">
                                <div class="mb-1">@val</div>
                                <div class="row pl-0 pr-0">
                                    <form asp-controller="Calculations" asp-action="DeleteInputData" asp-route-value="@val" asp-route-collectionNum="2" method="post">
                                        <button type="submit" class="butt">
                                            <i class="far far fa-trash-alt mr-2 mt-0 text-success iconFont" aria-hidden="true"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                            
                        }

                    </td>
                    
                    <td>
                        <form class="mb-2" asp-controller="Calculations" asp-action="AddInputData" asp-route-collectionNum="3">
                            <input name="value" class="sizeInput" maxlength="15" type="text" placeholder="Название">
                            <input class="sizeInput" type="submit" value="добавить">
                        </form>
                        
                        @foreach (var val in Model.ListInputData.PayTerm)
                        {
                            <div class="row justify-content-between border-bottom mb-1 ml-1 mr-2">
                                <div class="mb-1">@val</div>
                                <div class="row pl-0 pr-0">
                                    <form asp-controller="Calculations" asp-action="DeleteInputData" asp-route-value="@val" asp-route-collectionNum="3" method="post">
                                        <button type="submit" class="butt">
                                            <i class="far far fa-trash-alt mr-2 mt-0 text-success iconFont" aria-hidden="true"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                            
                        }

                    </td>
                    
                    <td>
                        <form class="mb-2" asp-controller="Calculations" asp-action="AddInputData" asp-route-collectionNum="4">
                            <input name="value" class="sizeInput" maxlength="15" type="text" placeholder="Название">
                            <input class="sizeInput" type="submit" value="добавить">
                        </form>
                        
                        @foreach (var val in Model.ListInputData.Meas)
                        {
                            <div class="row justify-content-between border-bottom mb-1 ml-1 mr-2">
                                <div class="mb-1">@val</div>
                                <div class="row pl-0 pr-0">
                                    <form asp-controller="Calculations" asp-action="DeleteInputData" asp-route-value="@val" asp-route-collectionNum="4" method="post">
                                        <button type="submit" class="butt">
                                            <i class="far far fa-trash-alt mr-2 mt-0 text-success iconFont" aria-hidden="true"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                            
                        }
                        
                    </td>
                    
                    <td>
                        <form class="mb-2" asp-controller="Calculations" asp-action="AddInputData" asp-route-collectionNum="5">
                            <input name="value" class="sizeInput" maxlength="15" type="text" placeholder="Название">
                            <input class="sizeInput" type="submit" value="добавить">
                        </form>
                        
                        @foreach (var val in Model.ListInputData.NDS)
                        {
                            <div class="row justify-content-between border-bottom mb-1 ml-1 mr-2">
                                <div class="mb-1">@val</div>
                                <div class="row pl-0 pr-0">
                                    <form asp-controller="Calculations" asp-action="DeleteInputData" asp-route-value="@val" asp-route-collectionNum="5" method="post">
                                        <button type="submit" class="butt">
                                            <i class="far far fa-trash-alt mr-2 mt-0 text-success iconFont" aria-hidden="true"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }

                    </td>
                </tr>
                </tbody>
            </table>
            
            
        </div>
        
    </div>
</div>

