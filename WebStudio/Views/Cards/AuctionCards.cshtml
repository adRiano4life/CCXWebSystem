@using X.PagedList.Mvc.Core
@using X.PagedList.Mvc.Bootstrap4.Core
@using Castle.Core.Internal
@model X.PagedList.IPagedList<CardClone>

@{
    ViewBag.Title = "База проведенных торгов";
    Layout = "_Layout";
}

@{
    var count = 1;
}

<h2>База проведенных торгов</h2>
<div class="container">
    <div class="col-md-12">
        <form method="get" class="mt-3 mb-5" style="border: 1px dotted lightslategrey; border-radius: 8px;">
            <div class="form-inline form-group justify-content-center">
                <div class="m-3">
                    <label class="control-label">Фильтровать по </label>
                    <select name="filterOrder" id="filterOrder">
                        <option value="All">По умолчанию</option>
                        <option value="Number">Номер лота</option>
                        <option value="CardSummDesc">Сумма лота по убыванию</option>
                        <option value="CardSummAsc">Сумма лота по возрастанию</option>
                    </select>
                </div>
                <div class="m-3">
                    <label class="control-label">Фильтровать по ответственному</label>
                    <input class="control-label col-xl-12" type="text" name="executorName" placeholder="Введите имя или фамилию">
                </div>
                <div class="my-auto pt-3">
                    <input type="submit" class="btn btn-outline-primary" value="Отфильтровать">
                </div>
            </div>
        </form>
        <div id="archiveTablePartial"></div>
        <table class="table" id="archiveTable">
            <thead class="thead-light">
            <tr>
                <th scope="col">№п/п</th>
                <th scope="col">Номер лота</th>
                <th scope="col">Название лота</th>
                <th scope="col">Сумма лота</th>
                <th scope="col">Ответственный</th>
                <th scope="col">Комментарий</th>
                <th scope="col">Статус</th>
            </tr>
            </thead>
            @foreach (var card in Model)
            {
                <tbody>
                <tr>
                    <th scope="row">@(count++)</th>
                    <td>@card.Number</td>
                    <td>@card.Name</td>
                    <td>@card.StartSumm</td>
                    <td>@card.Executor.Name @card.Executor.Surname</td>
                    @if (@card.Comment.IsNullOrEmpty())
                    {
                        <td>
                            <form>
                                <input type="hidden" id="cardId" value="@card.Id">
                                <a type="button" data-toggle="modal" data-target="#addCommentForm" class="font-italic">Добавить комментарий</a>
                            </form>
                        </td>
                    }
                    else
                    {
                        <td>@card.Comment</td>
                    }
                    <td>@card.CardState</td>
                </tr>
                </tbody>
            }
        </table>
    </div>
    <div class="modal fade" id="addCommentForm">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-uppercase" id="editModalLabel">Добавить комментарий</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="form">
                        <div class="form-group">
                            <label for="comment">Комментарий</label>
                            <input type="text" class="form-control" id="comment" placeholder="Комментарий">
                        </div>
                        <button type="button" class="btn btn-outline-primary shadow" id="done" onclick="AddCommentToArchiveAjax()">Добавить</button>
                    </form>
                    <div class="modal-body add-position-success" id="success">
                        <h4>Добавлено!</h4>
                        <i class="check-custom fas fa-check"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<p class="text-center">Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount </p>
<div class="row justify-content-center">
    @Html.PagedListPager(Model, page => Url.Action("AuctionCards", "Cards", 
        new { page, filterOrder = ViewBag.filterOrder, executorName = ViewBag.executorName }), Bootstrap4PagedListRenderOptions.Classic)
</div>

@section Scripts
{
    <script>
        $('#success').hide();
        function AddCommentToArchiveAjax(){
            var comment = $('#comment').val();
            var cardId = $('#cardId').val();
            console.log(cardId)
            $.ajax({
                url : '@Url.Action("AddCommentToArchiveAjax", "Cards")',
                type : 'POST',
                data : {
                    'cardId' : cardId,
                    'comment' : comment 
                },
                success : function (data){
                    $('#archiveTable').hide();
                    $('#archiveTablePartial').html(data);
                    console.log(data)
                }
            });
            $('#form').hide();
            $('#success').show();
        }

    </script>
}
