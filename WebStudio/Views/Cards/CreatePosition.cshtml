@model WebStudio.ViewModels.CreatePositionViewModel

@{
    ViewBag.Title = "Добавить позицию";
    Layout = "_Layout";
}

<div class="container justify-content-center">
    <div class="col-md-12 pt-3 pb-4 shadow">
        <div class="mt-3 mb-3 d-flex justify-content-center align-items-baseline">
            <h3>Создание карточки</h3>
        </div>
        <form asp-action="CreatePosition" asp-controller="Cards" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name" placeholder="Введите название позиции">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Measure"></label>
                <input class="form-control" asp-for="Measure" placeholder="Введите единицу измерения">
                <span asp-validation-for="Measure"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount"></label>
                <input class="form-control" asp-for="Amount" placeholder="Введите количество">
                <span asp-validation-for="Amount"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitPrice"></label>
                <input class="form-control" asp-for="UnitPrice" placeholder="Введите цену за единицу товара">
                <span asp-validation-for="UnitPrice"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryTime"></label>
                <input class="form-control" asp-for="DeliveryTime" placeholder="Введите срок поставки">
                <span asp-validation-for="DeliveryTime"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryTerms"></label>
                <input class="form-control" asp-for="DeliveryTerms" placeholder="Введите условия поставки">
                <span asp-validation-for="DeliveryTerms"></span>
            </div>
            <input type="hidden" asp-for="CardId" value="@Model.Card.Id">
            <div class="form-group">
                <input type="submit" class="btn btn-outline-primary" value="Добавить">
            </div>
        </form>
    </div>
</div>
