@model WebStudio.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "Изменить пароль";
    Layout = "_Layout";
}

<h2>Изменить пароль</h2>
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="ChangePassword" asp-controller="Account" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input class="form-control" asp-for="NewPassword" id="changePassword">
                <span asp-validation-for="NewPassword"></span>
            </div>
            <input type="hidden" asp-for="Id" value="@Model.Id">
            <input type="hidden" asp-for="Email" value="@Model.Email">
            <div>
                <input type="submit" class="btn btn-outline-primary" value="Изменить" id="edit">
            </div>
        </form>
    </div>
</div>