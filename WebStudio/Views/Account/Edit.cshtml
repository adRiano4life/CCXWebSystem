@model WebStudio.ViewModels.EditUserViewModel

@{
    ViewBag.Title = "Изменить профиль";
    Layout = "_Layout";
}


<div class="row justify-content-center">
    <div class="col-lg-6 shadow">
        <h2 class="mt-3 display-4">Изменить профиль</h2>
        <form asp-action="Edit" asp-controller="Account" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name" id="name">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname"></label>
                <input class="form-control" asp-for="Surname" id="surname">
                <span asp-validation-for="Surname"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input class="form-control" asp-for="Email" id="email">
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input class="form-control" asp-for="PhoneNumber" id="phone">
                <span asp-validation-for="PhoneNumber"></span>
            </div>

            <div class="form-group">
                <label asp-for="File">Фото</label>
                <img src="@Model.AvatarPath" class="ml-4" style="height: 30px; width: auto;">
                <input class="form-control-file" asp-for="File">
            </div>
            <input asp-for="@Model.Id" type="hidden" value="@Model.Id">
            <div class="mb-4">
                <input type="submit" id="edit" class="btn btn-outline-primary" value="Изменить">
            </div>
        </form>
    </div>
</div>